/* 星星评价 */
.comment1-description{
  padding:30rpx 0;
  display:flex;
  justify-content: center;
  align-items: center;
  flex-direction:row;
}
.comment1-description>text{
  font-size: 25rpx;
  color: #9FA0A0;
}
.star-pos{
  display:flex;
  flex-direction:row;
}
.stars{
    /* background:url("http://外链图片地址/Xing.png（灰色）"); */
    background: #000;
    width: 25rpx;
    height: 25rpx;
    background-size: 25rpx 25rpx;
    margin-left: 10rpx;
    transition: 200ms;
}
.on{
    /* background:url("http://外链图片地址/Xin.png（正常）"); */
     background: red;
    width: 25rpx;
    height: 25rpx;
    background-size: 25rpx 25rpx;
    transition: 1s;
    transform: scale(1,1)
}
