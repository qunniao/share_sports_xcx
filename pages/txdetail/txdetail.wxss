page {
  background-color: #F6F7F7;
}
.all{
  width: 750rpx;
  height: auto;
  margin: 0 auto;
  position: relative;
}
.home-nav-container{
  width: 100%;
  height: 40rpx;
  position: relative;
}
.home-nav-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 347rpx;
  z-index: -1;
}

.details_container{
  margin: 0 28rpx 30rpx 28rpx;
  background: #FFF;
  border-radius: 15rpx;
  width: 694rpx;
  display: inline-block;
  padding-bottom: 30rpx;
}
.details_title{
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid rgba(159,160,160,0.4);
  position: relative;
  display: flex;
  align-items: center;
}
.details_title>text{
  font-size: 28rpx;
  color: #000;
  margin-left: 28rpx;
}
.details_title .filter{
  position: absolute;
  right: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.filter>text{
  font-size: 25rpx;
  color: #000;
  margin-right: 4rpx;
}
.filter>image{
  width: 20rpx;
  height: 20rpx;
}
.details_list_container{
  height: 100rpx;
  position: relative;
  margin: 0 35rpx;
  width: 624rpx;
  border-bottom: 1rpx solid rgba(159,160,160,0.4);
}
.details_list_container .status{
  height: 35rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  font-size: 25rpx;
  color: #000;

}
.details_list_container .time{
  height: 22rpx;
  position: absolute;
  bottom: 14rpx;
  left: 0;
  font-size: 22rpx;
  color: #9FA0A0;
}
.details_list_container .values{
 height: 35rpx;
  position: absolute;
  top: 20rpx;
  right: 0;
  font-size: 25rpx;
  color: #000;
}
.details_list_container .balance{
  height: 22rpx;
  position: absolute;
  bottom: 14rpx;
  right: 0;
  font-size: 22rpx;
  color: #9FA0A0;
}
.modal_bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 1000;
}
.modalStyle{
  position: absolute;
  top: 80rpx;
  right: 30rpx;
  width: 201rpx;
  border-radius: 7rpx;
  background: #FFF;
  z-index: 1001
}
.modalStyle>view{
  width: 201rpx;
  height: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  border-bottom: 1rpx solid rgba(159,160,160,0.4);
}
.modalStyle>view:last-of-type{
  border-bottom: 0;
}
.select{
  color: #008FFF;
}
.unselect{
  color: #9FA0A0;
}
		